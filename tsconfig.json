{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDirs": ["./src/index.ts", "./lib/**/*.ts"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
